@Article{Glover2000,
  author   = {Glover, G. H. and Li, T. Q. and Ress, D.},
  title    = {{{I}mage-based method for retrospective correction of physiological motion effects in f{M}{R}{I}: {R}{E}{T}{R}{O}{I}{C}{O}{R}}},
