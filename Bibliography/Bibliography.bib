@Article{Setsompop2016,
  author   = {Setsompop, Kawin and Feinberg, David A. and Polimeni, Jonathan R.},
  title    = {Rapid brain MRI acquisition techniques at ultra-high fields},
  journal  = {NMR Biomed.},
  year     = {2016},
  volume   = {29},
